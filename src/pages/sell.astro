	const authInitialized = false;
	// Esto lo manejaremos mejor con un componente Vue que chequee el estado de Firebase
</script>

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Vender Producto - Naya</title>
	</head>
	<body class="bg-[#FDFCFB] min-h-screen pb-24">
		<!-- Auth Guard en el cliente -->
		<div id="auth-guard" class="hidden">
			<header class="bg-[#D9D2C8] sticky top-0 z-50 shadow-sm">
				<div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
					<a href="/" class="p-2 hover:bg-black/5 rounded-full transition-colors">
						<svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M15 19l-7-7 7-7" />
						</svg>
					</a>
					<Image src={logoNaya} alt="Logo Naya" class="h-10 w-auto" />
					<CartCounter client:only="vue" />
				</div>
			</header>

			<main class="max-w-3xl mx-auto px-6 py-12">
				<SellForm 
					client:only="vue"
					@success="handleProductSuccess"
					@error="handleProductError"
				/>
			</main>
		</div>

		<script>
			import { getAuth, onAuthStateChanged } from "firebase/auth";
			import { app } from "../lib/firebase";

			const auth = getAuth(app);
			onAuthStateChanged(auth, (user) => {
				if (!user) {
					// Redirigir al login con el parámetro 'next'
					const currentPath = window.location.pathname;
					window.location.href = `/login?next=${encodeURIComponent(currentPath)}`;
				} else {
					// Mostrar contenido
					document.getElementById('auth-guard')?.classList.remove('hidden');
				}
			});

			// Manejar éxito del formulario
			window.handleProductSuccess = (productId) => {
				console.log('Producto creado exitosamente:', productId);
				// El formulario ya maneja la redirección
			};

			// Manejar error del formulario
			window.handleProductError = (error) => {
				console.error('Error al crear producto:', error);
				// El formulario ya muestra el error
			};
		</script>

		<BottomNav client:only="vue" />
	</body>
</html>
